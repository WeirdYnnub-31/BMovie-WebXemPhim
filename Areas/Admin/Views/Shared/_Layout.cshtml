@{ Layout = null; }
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - bmovie admin</title>
    @* Bootstrap CSS from CDN - local files not found *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    @* Font Awesome Icons from CDN *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />
    <style>
        /* CRITICAL: Ensure all buttons are visible */
        button:not(.d-none):not([hidden]),
        .btn:not(.d-none):not([hidden]),
        input[type="submit"]:not(.d-none):not([hidden]),
        input[type="button"]:not(.d-none):not([hidden]),
        a.btn:not(.d-none):not([hidden]),
        form button:not(.d-none):not([hidden]),
        form input[type="submit"]:not(.d-none):not([hidden]),
        form input[type="button"]:not(.d-none):not([hidden]),
        .dropdown-toggle:not(.d-none):not([hidden]) {
            opacity: 1 !important;
            visibility: visible !important;
            display: inline-block !important;
        }
        
        /* Ensure dropdown menus are accessible */
        .dropdown:not(.d-none):not([hidden]),
        .dropdown-menu:not(.d-none):not([hidden]) {
            opacity: 1 !important;
            visibility: visible !important;
        }
    </style>
</head>
<body class="admin-theme">
    <header class="mb-4">
        <nav class="navbar navbar-dark bg-black-opaque neon-border">
            <div class="container-fluid">
                <div class="d-flex align-items-center gap-3">
                    <a class="navbar-brand d-flex align-items-center" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                        <span class="brand-mark me-2">b</span>
                        <span class="fw-bold">bmovie • Admin</span>
                    </a>
                    <a href="/" class="btn btn-sm btn-outline-light d-flex align-items-center gap-2" title="Về trang chủ">
                        <i class="fas fa-home"></i>
                        <span>Về trang chủ</span>
                    </a>
                </div>
                <div class="d-flex align-items-center gap-2">
                    <span class="text-white-50">Dashboard</span>
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        var userManager = Context.RequestServices.GetRequiredService<Microsoft.AspNetCore.Identity.UserManager<webxemphim.Data.ApplicationUser>>();
                        var currentUser = await userManager.GetUserAsync(User);
                        string displayName;
                        if (currentUser != null)
                        {
                            // Kiểm tra nếu là admin user mặc định
                            if (currentUser.Email?.Equals("admin@bmovie.local", StringComparison.OrdinalIgnoreCase) == true)
                            {
                                displayName = "Admin";
                            }
                            else if (!string.IsNullOrWhiteSpace(currentUser.UserName) && !currentUser.UserName.Contains("@"))
                            {
                                displayName = currentUser.UserName;
                            }
                            else if (!string.IsNullOrWhiteSpace(currentUser.UserName))
                            {
                                displayName = currentUser.UserName.Split('@')[0];
                            }
                            else
                            {
                                displayName = currentUser.Email?.Split('@')[0] ?? User.Identity?.Name ?? "User";
                            }
                        }
                        else
                        {
                            displayName = User.Identity?.Name ?? "User";
                            if (displayName.Contains("@"))
                            {
                                displayName = displayName.Split('@')[0];
                            }
                        }
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-light dropdown-toggle d-flex align-items-center gap-2" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user"></i>
                                <span>@displayName</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end rounded-4 p-2 mt-1">
                                <li><a class="dropdown-item" href="/">Về trang chủ</a></li>
                                <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index">Trang cá nhân</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form method="post" asp-controller="Account" asp-action="Logout">
                                        @Html.AntiForgeryToken()
                                        <button class="dropdown-item text-danger" type="submit">
                                            <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container-xxl">
        <div class="row g-3">
            <div class="col-12 col-lg-3">
                @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_Sidebar.cshtml")
            </div>
            <div class="col-12 col-lg-9">
                <main class="pb-5">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <footer class="footer-dark border-top">
        <div class="container-xxl py-3 text-white-50">&copy; 2025 bmovie • Khu quản trị</div>
    </footer>
    @* Bootstrap and jQuery from CDN - local files not found *@
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @* GSAP Core - Load from local bundle to avoid tracking prevention *@
    <script src="~/gsap-public/gsap-public/umd/gsap.js"></script>
    <script src="~/gsap-public/gsap-public/umd/ScrollTrigger.js"></script>
    <script src="~/gsap-public/gsap-public/umd/ScrollToPlugin.js"></script>
    <script src="~/gsap-public/gsap-public/umd/TextPlugin.js"></script>
    <script src="~/gsap-public/gsap-public/umd/Flip.js"></script>
    <script src="~/gsap-public/gsap-public/umd/Observer.js"></script>
    <script src="~/gsap-public/gsap-public/umd/Draggable.js"></script>
    <script src="~/gsap-public/gsap-public/umd/MotionPathPlugin.js"></script>
    @* Note: Premium plugins require Club GreenSock membership and are not available on public CDN. Code gracefully handles their absence. *@
    @* Register GSAP plugins immediately after loading *@
    <script>
        // Register GSAP plugins immediately after loading
        if (typeof gsap !== 'undefined') {
            if (typeof ScrollTrigger !== 'undefined') {
                gsap.registerPlugin(ScrollTrigger);
            }
            if (typeof ScrollToPlugin !== 'undefined') {
                gsap.registerPlugin(ScrollToPlugin);
            }
            if (typeof TextPlugin !== 'undefined') {
                gsap.registerPlugin(TextPlugin);
            }
            if (typeof Flip !== 'undefined') {
                gsap.registerPlugin(Flip);
            }
            if (typeof Observer !== 'undefined') {
                gsap.registerPlugin(Observer);
            }
            if (typeof Draggable !== 'undefined') {
                gsap.registerPlugin(Draggable);
            }
            if (typeof MotionPathPlugin !== 'undefined') {
                gsap.registerPlugin(MotionPathPlugin);
            }
            console.log('GSAP plugins registered');
        }
    </script>
    <script src="~/js/gsap-plugins-setup.js" asp-append-version="true"></script>
    <script src="~/js/gsap-animations.js" asp-append-version="true"></script>
    <script src="~/js/page-specific-animations.js" asp-append-version="true"></script>
    <script src="~/js/ensure-buttons-visible.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

