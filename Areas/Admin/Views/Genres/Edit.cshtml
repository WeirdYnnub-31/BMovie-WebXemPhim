@model webxemphim.Models.Genre
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Sửa thể loại";
}

<section class="glass-card p-4">
    <h2 class="section-title mb-2">Sửa thể loại</h2>
    <div class="section-bar mb-3"></div>
    <form method="post">
        <input type="hidden" asp-for="Id" />
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Tên</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Slug</label>
                <input asp-for="Slug" class="form-control" />
            </div>
        </div>
        <div class="mt-3 d-flex gap-2">
            <button class="neon-btn" type="submit">Lưu</button>
            <a class="btn btn-outline-light" asp-area="Admin" asp-controller="Genres" asp-action="Index">Hủy</a>
        </div>
    </form>
</section>


