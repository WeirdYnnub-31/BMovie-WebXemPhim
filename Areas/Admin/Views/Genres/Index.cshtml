@model List<webxemphim.Models.Genre>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Quản lý thể loại";
}

<section class="mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="section-title mb-0">Thể loại</h2>
        <a class="neon-btn" asp-area="Admin" asp-controller="Genres" asp-action="Create">Thêm thể loại</a>
    </div>
    <div class="section-bar mb-3"></div>
    <div class="glass-card p-0">
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên</th>
                        <th>Slug</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var g in Model)
                {
                    <tr>
                        <td>@g.Id</td>
                        <td>@g.Name</td>
                        <td>@g.Slug</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-light" asp-area="Admin" asp-controller="Genres" asp-action="Edit" asp-route-id="@g.Id">Sửa</a>
                            <form method="post" asp-area="Admin" asp-controller="Genres" asp-action="Delete" asp-route-id="@g.Id" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Xóa thể loại?');">Xóa</button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
    @{
        var currentPage = (int)(ViewBag.Page ?? 1);
        var pageSize = (int)(ViewBag.PageSize ?? 20);
        var total = (int)(ViewBag.Total ?? 0);
        var totalPages = (int)Math.Ceiling(total / (double)pageSize);
    }
    @if (totalPages > 1)
    {
        <nav class="mt-3">
            <ul class="pagination pagination-sm">
                <li class="page-item @(currentPage<=1?"disabled":null)">
                    <a class="page-link" asp-area="Admin" asp-controller="Genres" asp-action="Index" asp-route-page="@(currentPage-1)" asp-route-pageSize="@pageSize">Trước</a>
                </li>
                <li class="page-item disabled"><span class="page-link">Trang @currentPage/@totalPages</span></li>
                <li class="page-item @(currentPage>=totalPages?"disabled":null)">
                    <a class="page-link" asp-area="Admin" asp-controller="Genres" asp-action="Index" asp-route-page="@(currentPage+1)" asp-route-pageSize="@pageSize">Sau</a>
                </li>
            </ul>
        </nav>
    }
</section>


