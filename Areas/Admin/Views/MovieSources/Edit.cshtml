@model webxemphim.Models.MovieSource
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var movie = (webxemphim.Models.Movie)ViewBag.Movie;
    ViewData["Title"] = $"Sửa nguồn • {movie.Title}";
}

<section class="glass-card p-4">
    <h2 class="section-title mb-2">Sửa nguồn phát</h2>
    <div class="section-bar mb-3"></div>
    <form method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="MovieId" />
        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Server</label>
                <input asp-for="ServerName" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Chất lượng</label>
                <input asp-for="Quality" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Ngôn ngữ</label>
                <input asp-for="Language" class="form-control" />
            </div>
            <div class="col-md-12">
                <label class="form-label">URL (HLS/DASH)</label>
                <input asp-for="Url" class="form-control" />
            </div>
            <div class="col-md-3 form-check mt-4">
                <input asp-for="IsDefault" class="form-check-input" />
                <label class="form-check-label" for="IsDefault">Nguồn mặc định</label>
            </div>
        </div>
        <div class="mt-3 d-flex gap-2">
            <button class="neon-btn" type="submit">Lưu</button>
            <a class="btn btn-outline-light" asp-area="Admin" asp-controller="MovieSources" asp-action="Index" asp-route-movieId="@movie.Id">Hủy</a>
        </div>
    </form>
</section>


