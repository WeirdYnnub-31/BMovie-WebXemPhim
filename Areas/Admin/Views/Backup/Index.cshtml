@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Backup dữ liệu";
    var backupFiles = ViewBag.BackupFiles as List<dynamic> ?? new List<dynamic>();
}

<section class="mb-4">
    <h2 class="section-title mb-1">Backup dữ liệu</h2>
    <div class="section-bar mb-3"></div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="row g-3 mb-4">
        <div class="col-md-6">
            <div class="glass-card p-4">
                <h3 class="h5 mb-3">Backup Movies & Genres</h3>
                <p class="text-white-50 mb-3">Tạo backup cho tất cả phim và thể loại trong hệ thống</p>
                <form method="post" asp-action="CreateMoviesBackup">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="neon-btn">Tạo Backup Movies</button>
                </form>
            </div>
        </div>
        <div class="col-md-6">
            <div class="glass-card p-4">
                <h3 class="h5 mb-3">Backup Audit Logs</h3>
                <p class="text-white-50 mb-3">Tạo backup cho audit logs (có thể chọn khoảng thời gian)</p>
                <form method="post" asp-action="CreateAuditLogsBackup">
                    @Html.AntiForgeryToken()
                    <div class="mb-2">
                        <label class="form-label">Từ ngày (tùy chọn)</label>
                        <input type="date" name="from" class="form-control" />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Đến ngày (tùy chọn)</label>
                        <input type="date" name="to" class="form-control" />
                    </div>
                    <button type="submit" class="neon-btn">Tạo Backup Audit Logs</button>
                </form>
            </div>
        </div>
    </div>

    <div class="glass-card p-4">
        <h3 class="h5 mb-3">Danh sách Backup Files</h3>
        @if (backupFiles.Any())
        {
            <div class="table-responsive">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>Tên file</th>
                            <th>Ngày tạo</th>
                            <th>Kích thước</th>
                            <th class="text-end">Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var file in backupFiles)
                        {
                            <tr>
                                <td>@file.FileName</td>
                                <td>@file.Created.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>@((file.Size / 1024.0).ToString("F2")) KB</td>
                                <td class="text-end">
                                    <a href="@Url.Action("DownloadBackup", new { filePath = file.FilePath })" class="btn btn-sm btn-outline-primary">Tải về</a>
                                    <form method="post" asp-action="DeleteBackup" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="filePath" value="@file.FilePath" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bạn có chắc muốn xóa file này?')">Xóa</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-white-50">Chưa có backup nào được tạo</p>
        }
    </div>
</section>

