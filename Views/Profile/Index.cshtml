<section class="mb-4" data-page="profile">
    <div class="glass-card p-4 profile-header-card">
        @{ 
            var name = Model?.Email ?? "User"; 
            var avatarClaim = ViewBag.AvatarUrl as string ?? User.FindFirst("avatar")?.Value;
            var initial = string.IsNullOrWhiteSpace(name) ? "U" : name.Trim()[0].ToString().ToUpper(); 
            var avatarUrl = avatarClaim;
            if (!string.IsNullOrEmpty(avatarUrl) && TempData["AvatarUpdated"] != null)
            {
                avatarUrl = avatarUrl + (avatarUrl.Contains("?") ? "&" : "?") + "v=" + DateTime.UtcNow.Ticks;
            }
        }
        <div class="d-flex align-items-center gap-4">
            <div class="profile-avatar-wrapper">
                @if (!string.IsNullOrEmpty(avatarUrl))
                {
                    <img src="@avatarUrl" alt="Avatar" id="profileAvatar" class="profile-avatar" onerror="this.onerror=null; this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                    <span class="profile-avatar-fallback" style="display:none;">@initial</span>
                }
                else
                {
                    <span class="profile-avatar-fallback">@initial</span>
                }
                <div class="profile-avatar-badge">
                    <i class="fas fa-camera"></i>
                </div>
            </div>
            <div class="flex-grow-1">
                <h2 class="mb-1 profile-username">@Model?.Email</h2>
                <div class="d-flex align-items-center gap-3 mb-2">
                    @if (Model?.EmailConfirmed ?? false)
                    {
                        <span class="badge bg-success">
                            <i class="fas fa-check-circle me-1"></i> ƒê√£ x√°c th·ª±c
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-warning">
                            <i class="fas fa-exclamation-circle me-1"></i> Ch∆∞a x√°c th·ª±c
                        </span>
                    }
                    @if (ViewBag.CoinBalance != null)
                    {
                        <span class="badge bg-primary">
                            <i class="fas fa-coins me-1"></i> @ViewBag.CoinBalance Coins
                        </span>
                    }
                </div>
                @if (ViewBag.WatchedCount != null || ViewBag.FavoriteCount != null)
                {
                    <div class="d-flex gap-3 text-white-50 small">
                        @if (ViewBag.WatchedCount != null)
                        {
                            <span><i class="fas fa-eye me-1"></i> @ViewBag.WatchedCount ƒë√£ xem</span>
                        }
                        @if (ViewBag.FavoriteCount != null)
                        {
                            <span><i class="fas fa-heart me-1"></i> @ViewBag.FavoriteCount y√™u th√≠ch</span>
                        }
                    </div>
                }
            </div>
            <div class="profile-actions">
                <a class="btn btn-outline-light btn-sm" asp-controller="Inventory" asp-action="Index">
                    <i class="fas fa-box me-1"></i> Kho s∆∞u t·∫≠p
                </a>
            </div>
        </div>
    </div>
    @if (TempData["ProfileMsg"] != null)
    {
        var isSuccess = TempData["ProfileSuccess"] != null;
        <div class="alert alert-@(isSuccess ? "success" : "danger") alert-dismissible fade show mt-3 profile-alert" role="alert">
            <i class="fas fa-@(isSuccess ? "check-circle" : "exclamation-circle") me-2"></i>
            @TempData["ProfileMsg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</section>

