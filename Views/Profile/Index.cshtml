                            </span>
                        }
                    </div>
                </div>
                @if (ViewBag.Achievements != null && ViewBag.UnlockedCount != null)
                {
                    var achievements = ViewBag.Achievements;
                    var unlockedCount = ViewBag.UnlockedCount as int? ?? 0;
                    int totalCount = 0;
                    
