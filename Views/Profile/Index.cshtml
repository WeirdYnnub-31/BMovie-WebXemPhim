<style>
    .profile-header-card {
        background: linear-gradient(135deg, rgba(162, 89, 217, 0.1) 0%, rgba(98, 0, 238, 0.05) 100%);
        border: 1px solid rgba(162, 89, 217, 0.3);
    }
    
    .profile-avatar-wrapper {
        position: relative;
        width: 100px;
        height: 100px;
    }
    
    .profile-avatar, .profile-avatar-fallback {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid rgba(162, 89, 217, 0.5);
        box-shadow: 0 8px 24px rgba(162, 89, 217, 0.3);
    }
    
    .profile-avatar-fallback {
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 36px;
        font-weight: bold;
        background: linear-gradient(135deg, #a259d9 0%, #6200ee 100%);
        color: white;
    }
    
    .profile-avatar-badge {
        position: absolute;
        bottom: 0;
        right: 0;
        width: 32px;
        height: 32px;
        background: linear-gradient(135deg, #a259d9 0%, #6200ee 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 3px solid var(--bg-dark, #0a0a23);
        cursor: pointer;
        transition: all 0.3s ease;
    }
    
    .profile-avatar-badge:hover {
        transform: scale(1.1);
        box-shadow: 0 4px 12px rgba(162, 89, 217, 0.5);
    }
    
    .profile-username {
        font-size: 1.75rem;
        font-weight: 700;
        background: linear-gradient(135deg, #ffffff 0%, #a259d9 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .profile-stat-card {
        transition: all 0.3s ease;
        cursor: pointer;
    }
    
    .profile-stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(162, 89, 217, 0.3);
    }
    
    .profile-info-card, .profile-settings-card {
        transition: all 0.3s ease;
    }
    
    .profile-info-item {
        padding: 0.75rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .profile-info-item:last-child {
        border-bottom: none;
    }
    
    .profile-form input:focus {
        border-color: #a259d9;
        box-shadow: 0 0 0 0.2rem rgba(162, 89, 217, 0.25);
    }
    
    .profile-alert {
        animation: slideDown 0.5s ease;
    }
    
    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>


